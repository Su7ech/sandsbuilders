extends /_layouts/default
block title
  title Schultz | Gallery
block append css
  link(rel="stylesheet" href="/assets/css/gallery.css")

block content
  include /_includes/nav.pug
  .img-container.container.container-fluid
    .row.header
      .col-lg-12
        h1.page-header Galleries
    ul.row.albums
    ul.row.gallery(id="links")
    .row.back.pull-right
    div(id="templates")
      div(id="album")
        li.col-lg-3.col-md-4.col-sm-6.col-xs-12.thumb
          a(href="" title="" data-url="").thumbnail
            img(src="" alt="").image
            .caption
              h4
      div(id="gallery")
        li.col-lg-3.col-md-4.col-sm-6.col-xs-12.thumb
          a(href="").thumbnail
            img(src="" alt="").image
  include /_includes/gallery-controls.pug
  include /_includes/footer.pug

block append scripts
  script(src="/assets/js/jquery.blueimp-gallery.min.js")
  script(src="/assets/js/bootstrap-image-gallery.min.js")
  script(src="/assets/js/gallery.js")